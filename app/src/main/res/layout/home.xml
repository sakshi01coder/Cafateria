<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="@dimen/canteen_logo_size"
                android:layout_height="@dimen/canteen_logo_size"
                android:src="@drawable/canteen_logo"
                android:contentDescription="Canteen Logo" />

            <TextView
                android:id="@+id/greetingText"
                android:text="Hi User!"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#663399"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/checkoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Menu"
                android:backgroundTint="#663399"
                android:textColor="#FFFFFF"
                android:layout_gravity="bottom|end"
                android:layout_margin="12dp" />
        </FrameLayout>

        <!-- Search bar -->
        <EditText
            android:id="@+id/searchEditText"
            android:hint="Search food items..."
            android:textSize="20dp"
            android:textColor="@color/black"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- GridLayout for categories -->
        <GridLayout
            android:id="@+id/categoryGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Breakfast -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/breakfast"
                    android:contentDescription="Breakfast" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breakfast"
                    android:textSize="18sp"
                    android:textColor="#663399"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <!-- Starters -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/starter"
                    android:contentDescription="Starter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starters"
                    android:textSize="18sp"
                    android:textColor="#663399"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <!-- Add more categories the same way -->
            <!-- Example: Main Course -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/main_course"
                    android:contentDescription="Main Course" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main Course"
                    android:textSize="18sp"
                    android:textColor="#663399"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/dessert"
                    android:contentDescription="Dessert" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dessert"
                    android:textSize="18sp"
                    android:textColor="#663399"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold|italic" />
            </LinearLayout>



        </GridLayout>

    </LinearLayout>
</ScrollView>