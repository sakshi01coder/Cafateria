                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/vadapav"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp" />

                <!-- Info & Quantity Controls -->
                <LinearLayout
