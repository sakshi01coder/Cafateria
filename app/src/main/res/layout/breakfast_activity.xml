                            android:layout_height="35dp"
                            android:text="-"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="0dp"
                            android:textColor="@color/white"
                            android:backgroundTint="#663399"/>

                        <TextView
                            android:id="@+id/quantityText1"
